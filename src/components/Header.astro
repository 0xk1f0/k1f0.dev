---
export interface Props {
    name: string;
    isRight: boolean;
    leftText?: string;
    leftHref?: string;
    rightText?: string;
    rightHref?: string;
}

const {
    name,
    isRight,
    leftText = "Home",
    leftHref = "/",
    rightText = "Blog",
    rightHref = "/blog",
} = Astro.props as Props;
---

<nav
    class="h-14 sticky top-0 left-0 px-4 z-30 bg-opacity-50 bg-gradient-to-b from-surface to-80% to-transparent"
>
    <div
        class="h-14 flex flex-row justify-between items-center mx-auto my-auto max-w-screen-xl font-mono"
    >
        <a href={leftHref}>
            <p class="!text-lg font-semibold text-foreground self-center">
                {
                    (isRight && <span class="text-xl">&lt</span>) || (
                        <span class="text-xl">&gt</span>
                    )
                }
                {leftText}
            </p>
        </a>
        <p class="!text-lg font-semibold text-foreground self-center">
            {name}
        </p>
        <a href={rightHref}>
            <p class="!text-lg font-semibold text-foreground self-center">
                {rightText}
                {
                    (!isRight && <span class="text-xl">&gt</span>) || (
                        <span class="text-xl">&lt</span>
                    )
                }
            </p>
        </a>
    </div>
</nav>
