---
export interface Props {
    site: string;
    path?: string;
    name?: string;
}

const { site, path = "", name = "" } = Astro.props as Props;
---

<nav
    class="h-14 sticky top-0 left-0 px-4 z-30 bg-opacity-50 bg-gradient-to-b from-surface to-80% to-transparent"
>
    <div
        class="h-14 flex flex-row justify-center items-center mx-auto my-auto max-w-screen-xl font-mono"
    >
        <a href={site + path}>
            <p class="!text-lg font-semibold text-foreground self-center">
                {name}
            </p>
        </a>
    </div>
</nav>
