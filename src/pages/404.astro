---
import Layout from "@layouts/Layout.astro";

const REASON = Astro.url.searchParams.get("r");
---

<Layout title="404" desc="Not found">
    <div
        class="flex flex-row w-full h-full min-h-screen"
        transition:animate="fade"
    >
        <div class="flex flex-col m-auto">
            <div id="text-center m-auto">
                <h1 class="!text-4xl">404</h1>
                <p class="!text-2xl">
                    {
                        REASON === "config"
                            ? "No valid config found."
                            : REASON === "post"
                              ? "Post not found."
                              : "Page not found."
                    }
                </p>
            </div>
        </div>
    </div>
</Layout>
