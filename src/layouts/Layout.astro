---
import Header from "../components/Header.astro";
import "../styles/global.css";

export interface Props {
    title?: string;
    desc?: string;
}

// env vars
const DB_HOST = process.env.DB_HOST;
const DB_USER = process.env.DB_USER;
const DB_PASS = process.env.DB_PASS;

// exit if no set
if (!DB_HOST || !DB_USER || !DB_PASS) {
    throw Error('Missing Environment Variables!');
}

const { title = "", desc = "" } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="/favicon.svg" sizes="256x256" type="image/svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content={desc} />
        <!--OG Tags-->
        <meta property="og:title" content={title} />
        <meta property="og:site_name" content="k1f0.dev" />
        <meta property="og:type" content="website" />
        <meta property="og:locale" content="en" />
        <meta property="og:description" content={desc} />
        <meta
            property="og:image"
            content="https://k1f0.dev/og-preview.jpg"
        />
        <meta property="og:image:alt" content="O.o" />
        <!--Twitter Tags-->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:site" content="k1f0.dev" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={desc} />
        <meta
            name="twitter:image"
            content="https://k1f0.dev/og-preview.jpg"
        />
        <meta name="twitter:image:alt" content="O.o" />
    </head>
    <body>
        <Header />
        <div class="contentWrapper">
            <slot />
        </div>
    </body>
</html>
