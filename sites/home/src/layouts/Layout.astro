---
export interface Props {
    title?: string;
    site?: string;
    desc?: string;
}

const { title = "", site = "", desc = "" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={desc} />
        <!--OG Tags-->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:site_name" content={site} />
        <meta property="og:locale" content="en" />
        <meta property="og:description" content={desc} />
        <!--Twitter Tags-->
        <meta name="twitter:card" content="website" />
        <meta name="twitter:site" content={site} />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={desc} />
        <!--Misc-->
        <link rel="sitemap" href="/sitemap-index.xml" />
        <link rel="icon" href="/favicon.svg" sizes="256x256" type="image/svg" />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    *,
    *::before,
    *::after {
        box-sizing: border-box;
        scrollbar-width: thin;
        scrollbar-color: grey transparent;
    }

    *::-webkit-scrollbar {
        width: 4px;
    }

    *::-webkit-scrollbar-track {
        background: transparent;
    }

    *::-webkit-scrollbar-thumb {
        background-color: grey;
        border-radius: 4px;
        border: 1px solid grey;
    }

    body {
        @apply m-0 p-0
        bg-background
        w-screen
        h-screen
        overflow-hidden
        font-system-ui;
    }

    a {
        @apply text-primary;
    }

    p {
        @apply text-foreground m-0 p-0 text-base;
    }

    h1 {
        @apply text-foreground m-0 p-0 font-semibold text-3xl;
    }

    h2 {
        @apply text-foreground m-0 p-0 font-semibold text-2xl;
    }

    h3 {
        @apply text-foreground m-0 p-0 font-semibold text-xl;
    }

    li {
        @apply p-1 text-foreground text-base;
    }

    ul {
        @apply list-disc ml-5 p-0;
    }
</style>
